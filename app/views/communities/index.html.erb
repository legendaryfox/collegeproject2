<div class="container">
	<div id="content">
    	<h2>All Communities</h2>
        
        <div class="push"></div>
        
		<% @communities.each do |community| %>
        <div class="box">
            <a href="<%= community_path(community) %>">
            	<img src="http://www.bnntv.org/sites/default/files/what-is-bnn.jpg">
            	<div class="box-footer">
                	<h3><%= community.name %></h3>
                    <h4>Learn More</h4>
                </div>
            </a>
        </div>
		<% end %>



        
        <div class="push"></div>
        
    </div>
</div>

